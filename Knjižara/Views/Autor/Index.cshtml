@model AutorViewModel;
@{
    ViewBag.Title = "Popis knjiga";
}

<style>
    .imgSection {
        width: 100%;
        height: 300px;
    }
    section {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .ItemWrapper {
        max-width: 1400px;
        padding: 3rem 0rem;
        margin: 0 auto;
        width: 100%;
        display: grid;
        gap: 1rem;
        place-items: center;
        grid-template-columns: repeat(3, 1fr);
    }

    .prep {
        cursor: pointer;
        max-width: 400px;
        margin: 0 auto;
    }

    .MainImage {
        width: 100%;
        height: 100%;
        max-height:400px;
        object-fit: cover;
        box-shadow: 0px 0px 2px black;
        border-radius: 0.4rem;
    }

    .AutorDetailsWrapper{
        width:100%;
        text-align:center;
        padding:2rem 0;
    }

    @@media screen and (max-width: 900px) {
        .ItemWrapper {
            grid-template-columns: 1fr;
        }

        section {
            align-items: center;
        }
    }
</style>

<div class="AutorDetailsWrapper">
    <h1>@Model.autor.Ime @Model.autor.Prezime</h1>
</div>

<div class="ItemWrapper">
    @{
        foreach (var knjiga in @Model.autor.Knjigas)
        {
             <section class="imgSection prep">
        <img id="@knjiga.Idknjiga" src="@knjiga.Slika" class="MainImage" />
    </section>
        }
    }
    

</div>


<script>
    document.querySelectorAll(".prep").forEach(image=>{
        image.addEventListener("click",e=>{
            window.location.replace("/books/book/"+e.target.id)
        })
    })
</script>