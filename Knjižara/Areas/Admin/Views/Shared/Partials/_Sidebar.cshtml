@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

<div id="sidebar" class="app-sidebar" data-disable-slide-animation="true">
    <!-- BEGIN scrollbar -->
    <div class="app-sidebar-content" data-scrollbar="true" data-height="100%">
        <!-- BEGIN menu -->
        <div class="menu">
            <div class="menu-profile">
                <a href="javascript:;" class="menu-profile-link">
                    <div class="menu-profile-cover with-shadow"></div>
                    <div class="menu-profile-image">
                        <img src="~/front/img/user/user-1.jpg" class="user-img" alt="" />
                    </div>
                    <div class="menu-profile-info">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                @Accessor.HttpContext.Session.GetString("_UserName")
                            </div>
                            <div class="menu-caret ms-auto"></div>
                        </div>
                        <small>Administrator</small>
                    </div>
                </a>
            </div>
            <div class="menu-header">Navigacija</div>
            <div class="menu-item has-sub @Html.IsActive("Books")">
                <a href="javascript:;" class="menu-link">
                    <div class="menu-icon">
                        <i class="material-icons">menu_book</i>
                    </div>
                    <div class="menu-text">Knjige</div>
                    <div class="menu-caret"></div>
                </a>
                <div class="menu-submenu">
                    <div class="menu-item @Html.IsActive("Books", "Index")">
                        <a asp-area="Admin" asp-controller="Books" asp-action="Index" class="menu-link"><div class="menu-text">Dostupne</div></a>
                    </div>
                    <div class="menu-item @Html.IsActive("Books", "Deleted")">
                        <a asp-area="Admin" asp-controller="Books" asp-action="Deleted" class="menu-link"><div class="menu-text">Izbrisane</div></a>
                    </div>
                    <div class="menu-item @Html.IsActive("Books", "Add")">
                        <a asp-area="Admin" asp-controller="Books" asp-action="Add" class="menu-link"><div class="menu-text">Dodaj novu</div></a>
                    </div>
                </div>
            </div>
            <div class="menu-item @Html.IsActive("Books", "Borrowed")">
                <a asp-area="Admin" asp-controller="Books" asp-action="Borrowed" class="menu-link">
                    <div class="menu-icon">
                        <i class="material-icons">view_list</i>
                    </div>
                    <div class="menu-text">Posudbe</div>
                </a>
            </div>
            <div class="menu-item @Html.IsActive("Users", "Index")">
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="menu-link">
                    <div class="menu-icon">
                        <i class="material-icons">people</i>
                    </div>
                    <div class="menu-text">Korisnici</div>
                </a>
            </div>

            <!-- BEGIN minify-button -->
            <div class="menu-item d-flex">
                <a href="javascript:;" class="app-sidebar-minify-btn ms-auto" data-toggle="app-sidebar-minify"><i class="fa fa-angle-double-left"></i></a>
            </div>
            <!-- END minify-button -->
        </div>
        <!-- END menu -->
    </div>
    <!-- END scrollbar -->
</div>
<div class="app-sidebar-bg"></div>
<div class="app-sidebar-mobile-backdrop"><a href="#" data-dismiss="app-sidebar-mobile" class="stretched-link"></a></div>KD